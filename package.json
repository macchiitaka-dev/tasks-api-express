{
  "name": "tasks-api-express",
  "version": "1.0.0",
  "repository": "git@github.com:macchiitaka/tasks-api-express.git",
  "license": "MIT",
  "author": "macchiitaka <zxcvbnmtacashi@gmail.com>",
  "main": "build/index.js",
  "scripts": {
    "build": "run-s prisma:migrate build:tsc",
    "build:tsc": "tsc --incremental false",
    "coverage": "run-p coverage:**",
    "coverage:jest": "jest --coverage --passWithNoTests",
    "doc:build": "npx redoc-cli bundle ./api.yml -o ./doc/index.html --options.expandResponses=all",
    "doc:watch": "npx redoc-cli serve ./api.yml --watch --options.expandResponses=all",
    "fmt": "run-p fmt:**",
    "fmt:eslint": "eslint '**/*.{js,jsx,ts,tsx}' --fix --cache",
    "fmt:json": "prettier --write '**/*.json'",
    "fmt:markdown": "prettier --write '**/*.md'",
    "fmt:package-json": "sort-package-json",
    "initialize": "run-p initialize:*",
    "postinstall": "prisma generate",
    "lint": "run-p lint:**",
    "lint:eslint": "eslint '**/*.{js,jsx,ts,tsx}' --cache",
    "lint:typescript": "tsc -p . --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy --preview-feature",
    "start": "ts-node-dev src/infrastructure/server.ts",
    "test": "npm run test:watch",
    "test:once": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "type-watch": "tsc --noEmit -w"
  },
  "dependencies": {
    "@prisma/client": "2.16.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.3.1",
    "tslib": "^2.0.3",
    "zod": "^2.0.0-beta.29"
  },
  "devDependencies": {
    "@prisma/cli": "2.16.0",
    "@types/cors": "2.8.9",
    "@types/eslint": "7.2.6",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/express": "4.17.11",
    "@types/helmet": "4.0.0",
    "@types/jest": "26.0.20",
    "@types/prettier": "2.1.6",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "@typescript-eslint/typescript-estree": "4.14.2",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-unicorn": "27.0.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "sort-package-json": "1.48.1",
    "ts-jest": "26.5.0",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.1",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": "12.x",
    "npm": "7.x",
    "yarn": "1.x"
  }
}
